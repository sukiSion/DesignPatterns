<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".memorandummodel.game.GalGameActivity">

    <Button
        android:id="@+id/role_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入女1线路"
        app:layout_constraintBottom_toTopOf="@id/true_role_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/true_role_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入真女主线路"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        app:layout_constraintEnd_toEndOf="@+id/role_button"
        app:layout_constraintStart_toStartOf="@+id/role_button"
        app:layout_constraintTop_toBottomOf="@+id/role_button" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存存档"
        app:layout_constraintBottom_toTopOf="@id/read_button"
        app:layout_constraintEnd_toEndOf="@+id/true_role_button"
        app:layout_constraintStart_toStartOf="@+id/true_role_button"
        app:layout_constraintTop_toBottomOf="@+id/true_role_button" />

    <Button
        android:id="@+id/read_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取存档"
        app:layout_constraintBottom_toTopOf="@id/quit_button"
        app:layout_constraintEnd_toEndOf="@+id/save_button"
        app:layout_constraintStart_toStartOf="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@+id/save_button" />

    <Button
        android:id="@+id/quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出游戏"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/read_button"
        app:layout_constraintStart_toStartOf="@+id/read_button"
        app:layout_constraintTop_toBottomOf="@+id/read_button" />
</androidx.constraintlayout.widget.ConstraintLayout>
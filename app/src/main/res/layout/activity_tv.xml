<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statemodel.tv.TvActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/power_on_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开机" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <Button
            android:id="@+id/power_off_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关机" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <Button
            android:id="@+id/next_channel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一频道" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <Button
            android:id="@+id/prev_channel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一频道" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <Button
            android:id="@+id/turn_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调高音量" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <Button
            android:id="@+id/turn_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调低音量" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>